/*! @brief 消息处理器接口 */
interface Handler : object
{
    /*! @brief 构造一个消息处理器链处理对象
     @param hdlrs 处理器数组
     */
    Handler(Array hdlrs);

    /*! @brief 创建一个消息处理器路由对象
     @param map 初始化路由参数
     */
    Handler(Object map);

    /*! @brief 创建一个 JavaSvript 消息处理器
     @param hdlr JavaScript 处理器函数
     */
    Handler(Function hdlr);

    /*! @brief 处理一个消息或对象
     @param v 指定处理的消息或对象
     @return 返回下一步的处理器
     */
    Handler invoke(object v) async;

    Handler invoke(Object v = {}) async;
};
