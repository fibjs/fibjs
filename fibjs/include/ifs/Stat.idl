
/*! @brief 文件的基础信息对象

  Stat 对象通过 fs.stat, File.stat, fs.readdir 查询，不可独立创建
 */
interface Stat : object
{
    /*! @brief 文件名称 */
    readonly String name;

    /*! @brief 文件尺寸 */
    readonly Long size;

    /*! @brief 文件权限，Windows 不支持此属性 */
    readonly Integer mode;

    /*! @brief 文件最后修改时间 */
    readonly Date mtime;

    /*! @brief 文件最后访问时间 */
    readonly Date atime;

    /*! @brief 文件创建时间 */
    readonly Date ctime;

    /*! @brief 文件拥有者的id */
    readonly Integer uid;
    
    /*! @brief 文件所属的组id */
    readonly Integer gid;

    /*! @brief 查询文件是否有写入权限
     @return 为 true 则有写入权限
     */
    Boolean isWritable();

    /*! @brief 查询文件是否有读权限
     @return 为 true 则有读权限
     */
    Boolean isReadable();

    /*! @brief 查询文件是否有执行权限
     @return 为 true 则有执行权限
     */
    Boolean isExecutable();

    /*! @brief 查询文件是否隐藏
     @return 为 true 则隐藏
     */
    Boolean isHidden();

    /*! @brief 查询文件是否是目录
     @return 为 true 则是目录
     */
    Boolean isDirectory();

    /*! @brief 查询文件是否是文件
     @return 为 true 则是文件
     */
    Boolean isFile();

    /*! @brief 查询文件是否是符号链接
     @return 为 true 则是符号链接
     */
    Boolean isSymbolicLink();

    /*! @brief 查询文件是否是内存文件
     @return 为 true 则是内存文件
     */
    Boolean isMemory();

    /*! @brief 查询文件是否是 Socket
     @return 为 true 则是 Socket
     */
    Boolean isSocket();
};
