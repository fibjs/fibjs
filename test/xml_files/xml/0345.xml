		first CDATA #REQUIRED
		middle CDATA #IMPLIED
		last CDATA #REQUIRED > 
	<!ENTITY myfirst "Snow">
	<!ENTITY mymiddle "Y">
	<!ENTITY mylast "Man &myfirst; and &myfirst; mymiddle;.">
]>
